[Unit]
Description=notes
After=network.target

[Service]
User=app
WorkingDirectory=/opt/notes
Environment=APP_VERSION={{ app_version }}
ExecStart=/usr/bin/java -jar -Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom /opt/notes/target/easy-notes-${APP_VERSION}.jar

SyslogIdentifier=notes-%i

[Install]
WantedBy=multi-user.target
